@using Crito.Models;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Contact>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "_LayoutWithBreadcrumb.cshtml";

    var contactForm = new ContactForm();
}


<section class="section-contact-info">
    <div class="contact-info-container">
        @Html.GetBlockListHtml(Model.ContactInformation)
    </div>
</section>

<section class="contact-form-section">
    <div class="contact-form-container">

        @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
        {
            <h1>Leave us a message for any information.</h1>

            <div asp-validation-summary="ModelOnly"></div>

            <input class="message" type="text" asp-for="@contactForm.Name" placeholder="Name*" required>

            <input class="message" type="email" asp-for="@contactForm.Email" placeholder="Email*" required>

            <textarea asp-for="@contactForm.Message" placeholder="Your Message*" required></textarea>

            <button class="message" type="submit">Send Message <i class="fa-solid fa-arrow-up-right"></i></button>
        }
          
    </div>
</section>

<section class="section-map">
    <iframe src="@Model.Value("contactMapUrl")" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>